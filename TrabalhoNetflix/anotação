
        if (!isset($lembrar)) {
            if ($lembrar == 1) {
                setcookie('email', $email, time() + (86400 * 30), "/");
            } else if ($lembrar == 0) {
                setcookie('email', $email, time() - 86400, "/");
            }
            //Criei a sess√£o "login"
            $_SESSION['login'] = $email;
            header('location:../home.php');
        }